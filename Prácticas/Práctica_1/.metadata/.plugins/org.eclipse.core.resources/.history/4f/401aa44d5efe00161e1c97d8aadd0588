/**
 * 
 */
package elementos;

import visitantes.VisitanteEquipo;

/**
 * @author Jose-laptop
 *
 */
public class Disco extends Equipo {
	

	private int tamanio;
	private int velocidad;
	private String tipo;
	
	private final float NORMAL = 0.05f;
	private final float VIP = 0.10f;
	private final float MAYORISTA = 0.15f;
	

	public Disco(String nombre,int tamanio, int velocidad, String tipo, double precio) {
		super(nombre);
		this.tamanio = tamanio;
		this.velocidad = velocidad;
		this.tipo = tipo;
		this.precio = precio;
	}

	/**
	 * Devuelve la média de la velocidad de escritura y lectura del disco 
	 */
	@Override
	public double potencia() {
		
		return velocidad;
	}

	/**
	 * Devuelve el precio base del producto
	 */
	@Override
	public double precioNeto() {
		// TODO Auto-generated method stub
		return precio;
	}

	/**
	 * Devuelve el precio final con el descuento aplicado a cada tipo
	 * @param tipo : String recibe el tipo de descuento a aplicar
	 * 	tipo: regular 	= 5%
	 *  tipo: vip	  	= 10%
	 *  tipo: mayorista	= 15%
	 * 
	 */
	public double precioConDescuento(String tipo) {
		double precio_final = precio;
		switch(tipo){
			case "regular": precio_final -= (precio*NORMAL);break;
			case "vip": precio_final -= (precio*VIP);break;
			case "mayorista": precio_final -= (precio*MAYORISTA);break;
			
		}
		return precio_final;
	}

	/* (non-Javadoc)
	 * @see elementos.Equipo#aceptar(visitantes.VisitanteEquipo)
	 */
	@Override
	public void aceptar(VisitanteEquipo ve) {
		// TODO Auto-generated method stub

	}

}
