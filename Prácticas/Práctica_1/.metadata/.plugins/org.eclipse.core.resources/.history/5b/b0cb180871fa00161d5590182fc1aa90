/**
 * 
 */
package observador;

import javax.swing.JLabel;
import GUI.GUI;

/**
 * @author Jose-laptop
 *
 */
public class Pantalla implements Observador {
	
	private float temperatura_c;
	private float temperatura_f;
	private boolean celsius;
	
	private javax.swing.JLabel label_temperatura;
	

	public Pantalla(){
		temperatura_c = 0;
		celsius = true;
	}

	/**
	 * Recibe una nueva temperatura en Celsius.
	 */
	@Override
	public void manejarEvento(Object valor) {
		temperatura_c = (Integer) valor;
		temperatura_f = 32 + ( temperatura_c * 9 / 5);
		//System.out.println("Temperatura actual= "+temperatura+ "º");
		if(celsius)
			GUI.getInstance().actualizarTemperatura(temperatura_c+" ºC");
		else
			GUI.getInstance().actualizarTemperatura(temperatura_f+" ºF");
		//toFahrenheit();
		//System.out.println("Temperatura actual= "+temperatura+ "Fº");

	}
	
	
	public void setUnit(int i){
		switch (i) {
		case 0: celsius = true; break;
		case 1: celsius = false; break;
		}
	}
	


	

}
