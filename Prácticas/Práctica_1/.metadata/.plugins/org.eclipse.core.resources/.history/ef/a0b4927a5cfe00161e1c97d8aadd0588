package elementos;

import visitantes.VisitanteEquipo;

/**
 * @author Jose-laptop
 *
 */
public class Disco extends Equipo {
	
	private int tamanio;
	private int velocidad;
	private String tipo;
	private double precio;

	public Disco(String nombre,int tamanio, int velocidad, String tipo) {
		super(nombre);
		this.tamanio = tamanio;
		this.velocidad = velocidad;
		this.tipo = tipo;
	}

	/**
	 * Devuelve la média de la velocidad de escritura y lectura del disco 
	 */
	@Override
	public double potencia() {
		
		return velocidad;
	}

	/**
	 * Devuelve el precio base del producto
	 */
	@Override
	public double precioNeto() {
		// TODO Auto-generated method stub
		return precio;
	}

	/* (non-Javadoc)
	 * @see elementos.Equipo#precioConDescuento()
	 */
	@Override
	public double precioConDescuento() {
		// TODO Auto-generated method stub
		return 0;
	}

	/* (non-Javadoc)
	 * @see elementos.Equipo#aceptar(visitantes.VisitanteEquipo)
	 */
	@Override
	public void aceptar(VisitanteEquipo ve) {
		// TODO Auto-generated method stub

	}

}
