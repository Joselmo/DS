package observable;

import java.util.ArrayList;
import java.util.Random;
import java.util.concurrent.ArrayBlockingQueue;

/**
 * Simulador de Temperatura que genera un valor de temperatura cada 60 segundos
 * 
 * @author Jose-laptop
 *
 */
public class Temperatura extends MeteoSimulador implements Runnable {
	
	private int temperatura_maxima;
	
	public Temperatura(int temp){
		temperatura_maxima = temp;
		
		
	}

	@Override
	public void run() {
		// TODO Auto-generated method stub
		Random r= new Random(temperatura_maxima);

		int temperatura;

		while (true){

		  temperatura= r.nextInt();

		  try {
			  Thread.sleep(60);
		  }catch(java.lang.InterruptedException e){
			  e.printStackTrace();
		  }

		  notifica( temperatura );

		}
	}

}
