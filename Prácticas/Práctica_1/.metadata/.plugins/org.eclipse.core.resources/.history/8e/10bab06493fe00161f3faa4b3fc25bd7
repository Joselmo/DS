package observable;

import java.util.ArrayList;
import java.util.Random;

public class Simulador implements Runnable{
	
	private Tiempo t;
	private Temperatura temperatura;
	
	public Simulador(Tiempo tiempo, Temperatura temperatura) {
		Tiempo t = tiempo;
		this.temperatura = temperatura;
	}

	@Override
	public void run() {
		Random r = new Random();
		

		String tiempo_actual;
		int temperatura;

		while (true) {
			
			tiempo_actual = tiempo.get(r.nextInt(tiempo.size()));
			System.out.println("Tiempo-sensor: " + tiempo_actual);
			try {
				Thread.sleep(5000);
			} catch (java.lang.InterruptedException e) {
				e.printStackTrace();
			}

			t.notificarObservador(tiempo_actual);
			
			
