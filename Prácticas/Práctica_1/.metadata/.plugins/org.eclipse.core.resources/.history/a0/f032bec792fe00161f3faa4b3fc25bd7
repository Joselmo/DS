package observable;

import java.util.ArrayList;
import java.util.Random;

public class Simulador implements Runnable{
	
	private ArrayList<MeteoSimulador> meteo;
	
	public Simulador(MeteoSimulador e) {
		meteo.add(e);
	}

	@Override
	public void run() {
		Random r = new Random();

		String tiempo_actual;

		while (true) {

			tiempo_actual = tiempo.get(r.nextInt(tiempo.size()));
			System.out.println("Tiempo-sensor: " + tiempo_actual);
			try {
				Thread.sleep(5000);
			} catch (java.lang.InterruptedException e) {
				e.printStackTrace();
			}

			notificarObservador(tiempo_actual);

		}		
	}
	
	
	
	

}
